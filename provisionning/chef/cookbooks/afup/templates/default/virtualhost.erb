ServerName <%= node[:global][:domain] %>

<VirtualHost *:80>
    DocumentRoot /var/www/afup/htdocs
	<Directory "/var/www/afup/htdocs/">
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		Allow from all
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error.log
	LogLevel warn
	CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>

