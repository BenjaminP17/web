{% extends ':site:base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/forms_company.css') }}" media="all" />
    <link rel="stylesheet" href="{{ asset('css/buttons.css') }}" media="all" />
{% endblock %}

{% block content %}

    {% include ':site:secondary_menu.html.twig' with {
        menu: [
            {
                "nom" : "Accueil",
                "lien": path('member_index'),
                'is_active': false,
            },
            {
                "nom" : "Coordonnées",
                "lien": path('admin_company'),
                'is_active': true,
            },
            {
                "nom": "Membres",
                "lien": path('admin_company_members'),
                "is_active": false,
            },
        ]
    } only %}

    <div class="mw1400p center" id="container">
        <div class="line" id="main">

            <h1>Mon adhésion entreprise à l'AFUP</h1>

            <div class="afup-form">
            {{ form_start(form) }}
            <fieldset>
                <legend>Société</legend>
                <div class="afup-form-container">
                    {{ form_row(form.companyName) }}
                    {{ form_row(form.siret) }}
                    {{ form_row(form.address) }}
                    {{ form_row(form.zipcode) }}
                    {{ form_row(form.city) }}
                </div>
            </fieldset>

            <fieldset>
                <legend>Contact administratif</legend>
                <div class="afup-form-container">
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phone) }}
                </div>
            </fieldset>

            <div class="right">
            {{ form_widget(form.save, {"attr": { "class": "button"}}) }}
            </div>

            {{ form_widget(form) }}

            {{ form_end(form) }}
            </div>

        </div>
    </div>
{% endblock %}
