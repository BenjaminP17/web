{% extends ':admin:base_with_header.html.twig' %}

{% block content %}

    <h2>Votes des visiteurs</h2>

    {{ render(controller('AppBundle:AdminEvent:changeEvent', {selectedEvent: event})) }}

    {% if votes|length > 0 %}
    <table class="ui table striped very compact celled">
        <thead>
                <tr>
                    <th>Votant</th>
                    <th>Conf√©rence</th>
                    <th class="right aligned">Note</th>
                    <th>Commentaire</th>
                </tr>
            </thead>
        <tbody>
            {% for vote in votes %}
                <tr>
                    <td>{{ vote.githubUser.login }}</td>
                    <td>{{ vote.talk.title }}</td>
                    <td class="right aligned">{{ vote.vote }}</td>
                    <td>{{ vote.comment }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="ui placeholder segment">
            <div class="ui icon header">
                <i class="meh outline icon"></i>
                Aucune vote
            </div>
        </div>
    {% endif %}
{% endblock %}
