{% extends 'admin/base_with_header.html.twig' %}

{% block content %}

   <h2>Liste des rubriques</h2>

    <div class="ui menu">
        <a href="{#{{ path('admin_site_rubrique_add') }}#}index.php?page=site_rubriques&amp;action=ajouter" class="item">
            <div data-tooltip="Ajouter une rubrique" data-position="bottom left">
                <i class="icon plus square"></i>
                Ajouter
            </div>
        </a>
    </div>

    <div class="ui segment">
        <form method="GET" name="filtre">
            <input type="hidden" name="page" value="site_rubriques" />
            <input type="hidden" name="sort"  value="{{ sort }}" />
            <input type="hidden" name="direction" value="{{ direction }}" />
            <div class="ui form">
                <div class="inline fields">
                    <div class="field">
                        <label>Recherche</label>
                        <input type="text" name="filtre" value="{{ filter }}">
                    </div>
                    <div class="field">
                        <input type="submit" value="Filtrer" class="ui button" name="submit_filtre" />
                    </div>
                </div>
            </div>
        </form>

        <table class="ui table striped compact celled">
            <thead>
                <tr>
                    <th><a href="index.php?page=site_rubriques&amp;tri=date&amp;sens={% if direction == 'asc' and sort == 'date' %}desc{% else %}asc{% endif %}">Date</a></th>
                    <th><a href="index.php?page=site_rubriques&amp;tri=nom&amp;sens={% if direction == 'asc' and sort == 'nom' %}desc{% else %}asc{% endif %}">Nom</a></th>
                    <th class="center aligned"><a href="index.php?page=site_rubriques&amp;tri=etat&amp;sens={% if direction == 'asc' and sort == 'etat' %}desc{% else %}asc{% endif %}">Etat</a></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% if rubriques|length > 0 %}
                {% for rub in rubriques %}
                <tr>
                    <td>{{ rub.date }}</td>
                    <td style="white-space : normal;">{{ rub.nom }}</td>
                     <td class="center aligned">
                        {% if rub.etat == 1 %}
                            <a class="ui orange label">En ligne</a>
                        {% elseif rub.etat == -1 %}
                            <a class="ui grey label">Hors ligne</a>
                        {% else %}
                            <a class="ui violet label">En attente</a>
                        {% endif %}
                    </td>
                    <td class="single line right aligned">
                        <a id="modifier_{{ rub.id }}"
                            href="index.php?page=site_rubriques&amp;action=modifier&amp;id={{ rub.id }}"
                            data-position="left center"
                            data-tooltip="Modifier la rubrique {{ rub.nom }}"
                            class="compact ui icon button"
                        >
                            <i class="pencil alernate icon"></i>
                        </a>

                        <a id="supprimer_{{ rub.id }}"
                        href="index.php?page=site_rubriques&amp;action=supprimer&amp;id={{ rub.id }}"
                        data-position="left center"
                        data-tooltip="Supprimer la rubrique {{ rub.nom }}"
                        class="compact ui red icon button confirmable"
                        data-confirmable-label="Etes-vous sÃ»r de vouloir supprimer la rubrique {{ rub.nom }} ?"
                        >
                            <i class="trash icon"></i>
                        </a>
                    </td>
                 <tr>
                {% endfor %}
                
            {% else %}
                <tr>
                    <td colspan="4"><em>Aucune rubrique</em></td>
                </tr>
            {% endif %}
            </tbody>

        </table>
    </div>
{% endblock %}
