{% extends ':admin:base_with_header.html.twig' %}

{% block content %}
    <h2>Listes de diffusion</h2>

    <form method="post">
        {% set label='' %}
        {% for list in lists %}
            {% if label != list.categoryLabel %}
                {% if not loop.first %}
                    <hr />
                {% endif %}
                {% set label=list.categoryLabel %}
                <h3>{{ label }}</h3>
            {% endif %}
            <h4>{{ list.name }} ({{ list.email }})</h4>
            <p>{{ list.description }}</p>
            {% if subscriptions[list.email] %}
                <button name="unsubscribe" value="{{ list.id }}">Me d√©sabonner</button>
            {% else %}
                <button name="subscribe" value="{{ list.id }}">M'abonner</button>
            {% endif %}
        {% endfor %}
        <input type="hidden" name="token" value="{{ csrf_token }}" />
    </form>
{% endblock %}
