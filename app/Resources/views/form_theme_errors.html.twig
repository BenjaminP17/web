{% use 'form_div_layout.html.twig' %}

{% block form_row %}
    {{ parent() }}
    {% if form.vars.help ?? false %}
        <div>
            <label></label>
            <span class="form-help">{{ form.vars.help }}</span>
        </div>
    {% endif %}
{% endblock form_row %}


{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        {%- for error in errors -%}
            <div>
                <label></label>
                <span>{{ error.message }}</span>
            </div>
        {%- endfor -%}
        <label></label>
    {%- endif -%}
{%- endblock form_errors -%}
