{% if rendezvous.est_futur %}
    <em>Rendez-vous à venir :</em>
{% else %}
    <em>Rendez-vous archivé :</em>
{% endif %}

<h1>{{ rendezvous.titre }}</h1>

<blockquote>{{ rendezvous.accroche }}</blockquote>

<div id="theme">{{ rendezvous.theme }}</div>
<div id="infos">
    <div>Date : {{ rendezvous.date }}</div>
    <div>Horaire : {{ rendezvous.debut }} - {{ rendezvous.fin }}</div>
    <div>Capacit&eacute; : {{ rendezvous.capacite }} places</div>
    {% if rendezvous.url %}
        <div>Lieu : <a href="{{ rendezvous.url }}">{{ rendezvous.lieu }}</a></div>
    {% else %}
        <div>Lieu : {{ rendezvous.lieu }}</div>
    {% endif %}
    {% if rendezvous.adresse %}
        <div>Adresse : {{ rendezvous.adresse }}</div>
    {% endif %}
    {% if rendezvous.plan %}
        <div><a href="{{ rendezvous.plan }}">Plan d'acc&egrave;s</a></div>
    {% endif %}
    {% if rendezvous.message_inscription %}
        <br/>
        {{ rendezvous.message_inscription }}<br/>
        <div><a href="{{ rendezvous.url_externe }}">Inscrivez-vous</a></div>
    {% endif %}
    <div>
        <br/>

        <div id="infos">
            <ul>
                {% for i in [0:3] %}
                    {% if rendezvous['urlslides' ~ i] %}
                        <li><a href="{{ rendezvous['urlslides' ~ i] }}">{{ rendezvous['urlslides' ~ i] }}</a></li>
                    {% endif %}
                {% endfor %}
                {% for i in [0:3] %}
                    {% if rendezvous['slides' ~ i] != 'NULL' %}
                        <li><a href="{{ rendezvous['slides' ~ i] }}">{{ rendezvous['slides' ~ i] }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
            <br/>
        </div>
    </div>
</div>
